<script>
    (function attachCurrencyToggle() {
        const currencyElements = document.querySelectorAll('.currency-toggle input, .currency-toggle .btn-check');
        currencyElements.forEach(element => {
            element.addEventListener('change', toggleCurrency);
            element.addEventListener('click', toggleCurrency);
        });

        function toggleCurrency() {
            const checked = document.querySelector('.currency-toggle input:checked, .currency-toggle .btn-check:checked');
            const currency = checked ? checked.value : 'INR';
            const inrElements = document.querySelectorAll('.inr');
            const usdElements = document.querySelectorAll('.usd');
            if (currency === 'INR') {
                inrElements.forEach(el => el.style.display = 'inline');
                usdElements.forEach(el => el.style.display = 'none');
            } else {
                inrElements.forEach(el => el.style.display = 'none');
                usdElements.forEach(el => el.style.display = 'inline');
            }
        }

        // initialize
        toggleCurrency();
    })();
</script>