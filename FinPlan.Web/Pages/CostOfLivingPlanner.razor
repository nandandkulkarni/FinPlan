        .btn-soft-danger:focus {
            background-color: rgba(220, 53, 69, 0.12);
            color: #8a1f2a;
            text-decoration: none;
        }

    /* completely subtle text-only control */
    .btn-subtle {
        background: transparent;
        border: none;
        color: rgba(176, 42, 55, 0.85);
        padding: 0.08rem 0.18rem;
        opacity: 0.9;
    }

        .btn-subtle:hover,
        .btn-subtle:focus {
            opacity: 1;
            color: #b02a37;
            text-decoration: none;
        }

    /* small icon sizing / subtle opacity */
    .icon-muted {
        font-size: 0.95rem;
        opacity: 0.85;
    }

    /* add-category area */
    .add-category-bar {
        background: #f8f9fa;
        border: 1px solid #e9ecef;
        padding: 10px;
        border-radius: 6px;
        display: flex;
        gap: 8px;
        align-items: center;
