    private async Task ApplySavingsAgesIfEmptyAsync()
{
    try
    {
        if (Model == null) Model = new CalendarSpendingModel();

        // If retirement already has ages, nothing to do
        var retirementHasAges =
            (Model.CurrentAgeYou > 0 && Model.RetirementAgeYou > 0) &&
            (Model.CurrentAgePartner > 0 || Model.RetirementAgePartner > 0 || Model.CurrentAgePartner == 0);

        if (retirementHasAges)
            return;

        var userGuid = await UserGuidService.GetOrCreateUserGuidAsync();
        var apiBaseUrl = this.ApiUrlProvider.GetApiBaseUrl();
        var client = HttpCustomClientService.CreateRetryClient(HttpClientFactory);

        SavingsCalculatorModel? savingsYours = null;
