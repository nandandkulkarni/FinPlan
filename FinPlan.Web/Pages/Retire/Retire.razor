        if ((Model.CurrentAgeYou <= 0 || Model.CurrentAgeYou == null) && (savingsYours?.CurrentAge ?? 0) > 0)
        {
            Model.CurrentAgeYou = savingsYours!.CurrentAge;
            changed = true;
        }

        if ((Model.RetirementAgeYou <= 0 || Model.RetirementAgeYou == null) && (savingsYours?.RetirementAge ?? 0) > 0)
        {
            Model.RetirementAgeYou = savingsYours!.RetirementAge;
            changed = true;
