    .attention-wrapper {
        position: relative;
        padding-left: 44px; /* make room for the arrow */
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .attention-arrow {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        width: 20px;
        height: 20px;
        pointer-events: none;
        z-index: 5;
    }

        .attention-arrow svg {
            width: 100%;
            height: 100%;
            fill: #111;
            filter: drop-shadow(0 6px 12px rgba(0,0,0,0.12));
            animation: arrow-bob 1.6s ease-in-out infinite;
            transform-origin: center;
        }

