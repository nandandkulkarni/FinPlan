@inject FinPlan.Web.Services.DebugMessageService DebugService

<style>
    .nav-debug-window {
        background: rgba(0,0,0,0.85);
        color: #fff;
        padding: 10px 14px;
        border-radius: 8px;
        font-size: 13px;
        margin-bottom: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.2);
        max-height: 180px;
        overflow-y: auto;
    }

    .debug-bottom {
        position: fixed;
        left: 0;
        bottom: 0;
        background-color: #FFD600;
        color: #222;
        border-radius: 8px 8px 0 0;
        font-size: 0.95em;
        min-width: 200px;
        max-width:300px;
        max-height: 660px;
        overflow-y: auto;
        z-index: 9999;
        box-shadow: 0 -2px 8px rgba(0,0,0,0.07);
        padding: 10px 18px;
        overflow-y: auto
    }
</style>



<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="savings-planner">
                <span class="bi bi-calculator" aria-hidden="true"></span> Wealth Journey
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="retirement-spending" title="Financial Independence, Retire Early">
                <span class="bi bi-wallet2" aria-hidden="true"></span> FIRE Planner
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tabs">
                <span class="bi bi-table" aria-hidden="true"></span> Data Tabs
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="savings-tabbed">
                <span class="bi bi-columns-gap" aria-hidden="true"></span> Savings Tabbed
            </NavLink>
        </div>
        <div class="nav-debug-window">
            <strong>Debug:</strong>
            @foreach (var msg in DebugService.Messages)
            {
                <div>@msg</div>
            }
        </div>
        <div class="debug-bottom p-2">
            <strong>Debug:</strong>
            @foreach (var msg in DebugService.Messages.OrderByDescending(prop => prop.MessageTime))
            {
                <div>
                    <span style="font-weight:600;">@msg.MessageTime.TimeOfDay: </span>
                    <span>@msg.Message</span>
                </div>
            }
        </div>
    </nav>
</div>
