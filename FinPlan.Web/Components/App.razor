@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.Extensions.Options
@using FinPlan.Web.Config
@inject IOptions<AdSettings> AdOptions

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />

    <!-- Shared typography (base body styles). Use Google Fonts CDN as the reliable fallback. -->
    <link rel="stylesheet" href="css/typography.css" />

    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="FinPlan.Web.styles.css" />

    <!-- Ensure font is loaded for all pages (fallback remote) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet" />

    <ImportMap />
    <title>REWealth-en</title>
    <link rel="icon" type="image/svg+xml" href="images/wealthyfyx-logo.svg" />
    <HeadOutlet />

    @* Load AdSense script early in the host document head to avoid document.write / DOM mutation conflicts with Blazor renderer. *@
    @if (!string.IsNullOrWhiteSpace(AdOptions.Value.ClientId))
    {
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=@AdOptions.Value.ClientId" crossorigin="anonymous"></script>
        <script>
            try { console.log('App: AdSense script added to head (client @AdOptions.Value.ClientId)'); } catch(e) { }
        </script>
    }
</head>
<body>
    <CascadingAuthenticationState>
        <Routes @rendermode="InteractiveServer" />
    </CascadingAuthenticationState>
    <script src="_framework/blazor.web.js"></script>
    <script src="lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/excelExport.js"></script>
    <script src="js/cookieHandlerExtension.js"></script>
    <script src="js/adLoader.js"></script>
    <script src="js/simpleAdInit.js"></script>
    <script src="js/browserInfo.js"></script>
</body>

</html>
