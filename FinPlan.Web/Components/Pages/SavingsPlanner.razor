        border-color: #333;
        color: #E2E8F0;
    }

    .dark-theme .form-control:focus {
        background-color: #2D2D2D;
        box-shadow: 0 0 0 0.25rem rgba(109, 93, 252, 0.25);
    }

    .dark-theme .btn-primary {
        background-color: #6D5DFC;
        border-color: #6D5DFC;
    }

    .dark-theme .btn-primary:hover {
