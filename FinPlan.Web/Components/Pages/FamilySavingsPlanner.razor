@page "/family-savings"
@using System.ComponentModel.DataAnnotations
@using FinPlan.Web.Components
@using FinPlan.Web.Services
@rendermode InteractiveServer

<div class="container-fluid">
    <h2 class="mt-4">Family Savings Planner</h2>
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <button class="nav-link @(activeTab == "yours" ? "active" : "")" @onclick='() => SetActiveTab("yours")'>Yours</button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(activeTab == "partner" ? "active" : "")" @onclick='() => SetActiveTab("partner")'>Your Partner's</button>
        </li>
    </ul>
    <div class="tab-content">
        @if (activeTab == "yours")
        {
            <div class="tab-pane active">
                <FamilySavingsPlannerTab Title="Your Savings" />
            </div>
        }
        else if (activeTab == "partner")
        {
            <div class="tab-pane active">
                <FamilySavingsPlannerTab Title="Partner's Savings" />
            </div>
        }
    </div>
</div>

@code {
    private string activeTab = "yours";
    private void SetActiveTab(string tab) => activeTab = tab;
}
