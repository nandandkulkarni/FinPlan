    {
        try
        {
            // Detect mobile via matchMedia (<= 767px)
            var isMobile = await JSRuntime.InvokeAsync<bool>("eval", "window.matchMedia && window.matchMedia('(max-width: 767px)').matches");

            if (!isMobile)
            {
                // Desktop -> always show
