        var delayTask = Task.Delay(1000);

        var completedTask = await Task.WhenAny(operationTask, delayTask);

        if (completedTask == delayTask)
        {
            isLoading = true;
            loadingShown = true;
            StateHasChanged();
            await operationTask;
        }
        else
        {
            await operationTask;
        }

        if (loadingShown)
