    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                userGuid = await UserGuidService.GetOrCreateUserGuidAsync();
            }
            catch { }

            // load dynamic tabs first so we can set proper active tab/calculatorType
            await LoadTabsAsync();

            // ensure activeTab is valid
            if (!Tabs.Contains(activeTab))
            {
                activeTab = Tabs.First();
            }

            calculatorType = activeTab switch
            {
                "your" => "CostOflivingyours",
                "partner" => "CostOflivingpartners",
                "joint" => "CostOflivingjoint",
                _ => activeTab
            };

            await LoadFromApi();
            StateHasChanged();
        }
    }
