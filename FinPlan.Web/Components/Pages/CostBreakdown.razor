                try
                {
                    var data = System.Text.Json.JsonSerializer.Deserialize<CostBreakdownData>(json, new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true });
                    if (data != null)
                    {
                        Items = data.Items ?? new List<CostItem>();
