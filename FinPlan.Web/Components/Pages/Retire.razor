    {
        if (lifeValue <= 0) return 0;
        if (lifeValue > 1900)
        {
            // stored as a calendar year; convert to age if currentAge available, otherwise estimate from year
            if (currentAge > 0)
            {
                return currentAge + (lifeValue - DateTime.Now.Year);
            }
            else
